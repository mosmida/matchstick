{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "src",
    "paths": {
      "@matchStick/shared": [
        "app/shared"
      ],
      "@matchStick/core": [
        "app/core"
      ]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
